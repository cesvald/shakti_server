<%= bootstrap_form_with(model: post, local: true) do |form| %>

  <%= form.text_field :title %>

  <%= form.rich_text_area :body %>

  <%= form.rich_text_area :excerpt %>

  <%= form.text_field :excerpt_image %>
  
  <%= form.text_field :body_image %>
  
  <%= form.text_field :youtube_video_code %>
  
  <%= form.date_field :post_on %>

  <%= form.select :kind, Post.kinds.keys.collect {|kind| [kind.titleize, kind]} %>
  
  <%= form.date_field :written_on %>
  
  <%= form.text_field :link_to %>
  
  <%= form.submit %>
  
<% end %>
