<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<%= link_to 'New Post', new_post_path, class: "btn btn-primary", style:"color: white"%>
<br>
<br>
<%= paginate @posts%>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Excerpt</th>
      <th>Post on</th>
      <th>Kind</th>
      <th>Written on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body.to_plain_text.truncate(50) %></td>
        <td><%= post.excerpt %></td>
        <td style="width: 102px"><%= post.post_on %></td>
        <td><%= post.kind %></td>
        <td style="width: 102px"><%= post.written_on %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @posts %>

<br>
